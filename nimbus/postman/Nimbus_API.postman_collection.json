{
  "info": {
    "name": "Nimbus Notification API",
    "description": "Complete CRUD API for notification management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Check if the service is running"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Create Email Notification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenant_id\": \"{{tenant_id}}\",\n  \"user_id\": \"{{user_id}}\",\n  \"channel\": \"email\",\n  \"payload\": {\n    \"to\": \"user@example.com\",\n    \"subject\": \"Welcome to Nimbus!\",\n    \"body\": \"Thanks for signing up.\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/notifications",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications"]
            },
            "description": "Create a new email notification"
          },
          "response": []
        },
        {
          "name": "Create SMS Notification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenant_id\": \"{{tenant_id}}\",\n  \"user_id\": \"{{user_id}}\",\n  \"channel\": \"sms\",\n  \"payload\": {\n    \"phone\": \"+1234567890\",\n    \"message\": \"Your verification code is 123456\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/notifications",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications"]
            },
            "description": "Create a new SMS notification"
          },
          "response": []
        },
        {
          "name": "Create Webhook Notification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenant_id\": \"{{tenant_id}}\",\n  \"user_id\": \"{{user_id}}\",\n  \"channel\": \"webhook\",\n  \"payload\": {\n    \"url\": \"https://api.example.com/webhook\",\n    \"method\": \"POST\",\n    \"body\": {\n      \"event\": \"user.created\",\n      \"user_id\": \"12345\"\n    }\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/notifications",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications"]
            },
            "description": "Create a new webhook notification"
          },
          "response": []
        },
        {
          "name": "Get Notification by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/notifications/{{notification_id}}",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications", "{{notification_id}}"]
            },
            "description": "Retrieve a specific notification by its ID"
          },
          "response": []
        },
        {
          "name": "List Notifications (Default)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/notifications?tenant_id={{tenant_id}}",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications"],
              "query": [
                {
                  "key": "tenant_id",
                  "value": "{{tenant_id}}",
                  "description": "Tenant UUID"
                }
              ]
            },
            "description": "List all notifications for a tenant (default pagination)"
          },
          "response": []
        },
        {
          "name": "List Notifications (Paginated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/v1/notifications?tenant_id={{tenant_id}}&limit=10&offset=0",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications"],
              "query": [
                {
                  "key": "tenant_id",
                  "value": "{{tenant_id}}",
                  "description": "Tenant UUID"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Results per page (max 100)"
                },
                {
                  "key": "offset",
                  "value": "0",
                  "description": "Number of results to skip"
                }
              ]
            },
            "description": "List notifications with custom pagination"
          },
          "response": []
        },
        {
          "name": "Update Status - Mark as Sent",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"sent\",\n  \"attempt\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/notifications/{{notification_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications", "{{notification_id}}", "status"]
            },
            "description": "Mark a notification as successfully sent"
          },
          "response": []
        },
        {
          "name": "Update Status - Mark as Failed",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"failed\",\n  \"attempt\": 1,\n  \"error\": \"Connection timeout to email server\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/notifications/{{notification_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications", "{{notification_id}}", "status"]
            },
            "description": "Mark a notification as failed with error message"
          },
          "response": []
        },
        {
          "name": "Update Status - Mark as Processing",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"processing\",\n  \"attempt\": 0\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/notifications/{{notification_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications", "{{notification_id}}", "status"]
            },
            "description": "Mark a notification as currently being processed"
          },
          "response": []
        }
      ]
    },
