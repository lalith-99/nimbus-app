            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenant_id\": \"invalid-uuid\",\n  \"user_id\": \"{{user_id}}\",\n  \"channel\": \"email\",\n  \"payload\": {\n    \"to\": \"user@example.com\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/notifications",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications"]
