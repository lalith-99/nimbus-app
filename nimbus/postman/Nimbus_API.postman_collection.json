            "body": {
              "mode": "raw",
              "raw": "{\n  \"tenant_id\": \"{{tenant_id}}\",\n  \"user_id\": \"{{user_id}}\",\n  \"channel\": \"invalid_channel\",\n  \"payload\": {\n    \"to\": \"user@example.com\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/notifications",
              "host": ["{{base_url}}"],
              "path": ["v1", "notifications"]
            },
            "description": "Test validation error for invalid channel"
          },
          "response": []
        },
        {
          "name": "Missing Required Fields",
          "request": {
            "method": "POST",
